{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2015", "es2017"],
        "removeComments": true,
        "allowJs": true,
        "moduleResolution": "node",
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
